<div class="container">
	<div class="row">
		<div class="col-12">
			<p>My Offers</p>
			<table>
				<thead>
					<tr>
						<th>Date</th>
						<th>Request Title</th>
						<th>Budget</th>
						<th>Offer amount</th>
						<th>Deliver</th>
						<th>Status</th>
					</tr>
				</thead>
				<tbody>
					<% if @offers.blank? %>
						<tr>
							<td><p>Nothing to show here</p></td>
						</tr>
					<% end %>
					<% @offers.each do |o| %>
						<tr>
							<td><%= o.created_at.strftime('%d, %b %Y') %></td>
							<td>
								<%= link_to o.request.title, request_path(o.request) %>
							</td>
							<td><%= o.request.budget %></td>
							<td><%= o.amount %></td>
							<td><%= pluralize(o.days, 'day') %></td>
							<td><%= o.status.capitalize %></td>
							
						</tr>
					<% end %>					
				</tbody>
			</table>
		</div>
	</div>
</div>