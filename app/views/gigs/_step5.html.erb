<div class="step-content <%= 'd-none' if @step!=5 %>">
	<div>
		<%= hidden_field_tag 'active', 'true' if @step==5 %>
		<strong>Almost there</strong>
		<p>Let's publish</p>
	</div>
</div>
<div class="field">
	<div class="control <%= 'd-none' if @step<=1 %>">
		<%= link_to 'Back', edit_gig_path(@gig, step: @step-1), class: "button" %>
	</div>
	<div class="control">
		<% if @step !=5 %>
			<%= f.submit "Save & Continue", class: "btn btn-primary" %>
		<% else %>
			<%= link_to 'Publish', gig_path(@gig.id, gig: {active: true}, step: @step),
			method: :put,
			data: {confirm: "Do you want to publish?"},
			class: "btn btn-danger" %>
		<% end %>
	</div>
</div>